
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apurupa.iiitd.com.energyapp.HomeFragment"
    android:background="@color/bgBottomNavigation">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Compare With"

        android:id="@+id/CompareTextView"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"

        />




    <EditText
        android:id="@+id/dynamicCompareEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:hint="Select.. "



        android:layout_marginTop="398dp"
        android:layout_marginLeft="180dp"
        android:gravity="center"


        android:textAppearance="?android:textAppearanceSmall"


        android:textSize="20dp"

        android:editable="false"

        />
    <com.jjoe64.graphview.GraphView
        android:layout_width="330dp"
        android:layout_height="360dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/graph" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:id="@+id/dynamicNoDataTextView"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"

        />
    <ProgressBar
        android:id="@+id/dynamicprogressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"
        />



    <TextView
        android:layout_width="200dp"
        android:layout_height="72dp"
        android:text="Your Avg power Consumption(W)"
        android:id="@+id/avg_powerTextView"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="72dp"

        android:id="@+id/avg_powerValueTextView"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="250dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="No of Units Consumed"
        android:id="@+id/dynamic_units_TextView"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/dynamic_units_ValueTextView"
        android:layout_marginTop="480dp"
        android:layout_marginLeft="250dp"/>

</FrameLayout>
