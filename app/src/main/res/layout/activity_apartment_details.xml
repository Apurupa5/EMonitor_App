<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="apurupa.iiitd.com.energyapp.ApartmentDetailsActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartment No"
        android:id="@+id/ApartmentNoTextView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/textColor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />


    <EditText
        android:id="@+id/ApartmentNo_text_input"
        android:layout_height="40dp"
        android:layout_width="162dp"
        android:layout_marginTop="-35dp"
        android:inputType="text"
        android:layout_marginLeft="80dp"
        android:textColor="@color/textColor"
        android:layout_gravity="center_horizontal" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Adults"
        android:textColor="@color/textColor"
        android:id="@+id/AdultsTextView"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
       />


    <Spinner
        android:id="@+id/AdultsSpinner"
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Children"
        android:textColor="@color/textColor"
        android:id="@+id/ChildrenTextView"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <Spinner
        android:id="@+id/ChildrenSpinner"
        android:layout_width="176dp"
        android:layout_height="50dp"

        android:spinnerMode="dropdown"
        style="@style/Widget.AppCompat.DropDownItem.Spinner"
        android:background="@android:drawable/btn_dropdown"
        android:popupBackground="@color/bgBottomNavigation"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="180dp"/>


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/saveButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:textColor="@color/colorPrimary"
        android:background="@color/textColor"
       />



</LinearLayout>
