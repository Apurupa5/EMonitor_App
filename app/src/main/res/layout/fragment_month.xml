<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="apurupa.iiitd.com.energyapp.monthFragment"
    android:background="@color/bgBottomNavigation"
    >

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/monthHorizontalCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgBottomNavigation"
        android:layout_marginTop="52dp"
        />

    <com.jjoe64.graphview.GraphView
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/month_graph"
        android:layout_marginTop="104dp"/>
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:id="@+id/monthNoDataTextView"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"

        />


    <ProgressBar
        android:id="@+id/monthprogressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Compare With"

        android:id="@+id/monthCompareTextView"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"

        />


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Average power Consumption"
        android:id="@+id/month_avg_powerTextView"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/month_avg_powerValueTextView"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="250dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="No of Units Consumed"
        android:id="@+id/month_units_TextView"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/month_units_ValueTextView"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="250dp"/>

    <EditText
        android:id="@+id/monthCompareEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:hint="Select.. "




        android:layout_marginTop="380dp"
        android:gravity="center"

        android:layout_marginLeft="200dp"
        android:textAppearance="?android:textAppearanceSmall"


        android:textSize="20dp"

        android:editable="false"

        />




</FrameLayout>
