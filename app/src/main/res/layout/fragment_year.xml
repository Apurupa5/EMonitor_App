<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="apurupa.iiitd.com.energyapp.yearFragment"
    android:background="@color/bgBottomNavigation">
    <TextView
        android:id="@+id/selectYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Year"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/selectYearEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:hint="Select.. "



        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:gravity="center"

        android:layout_marginLeft="180dp"/>

    <ImageButton
        android:id="@+id/yearcalendarbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="300dp"
        android:background="@null"
        android:src="@drawable/ic_calendar"
        />




    <com.jjoe64.graphview.GraphView
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/year_graph"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Average power Consumption"
        android:id="@+id/year_avg_powerTextView"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/year_avg_powerValueTextView"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="250dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="No of Units Consumed"
        android:id="@+id/year_units_TextView"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/year_units_ValueTextView"
        android:layout_marginTop="465dp"
        android:layout_marginLeft="250dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:id="@+id/yearNoDataTextView"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"

        />
    <ProgressBar
        android:id="@+id/yearprogressBar_cyclic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="150dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Compare With"

        android:id="@+id/yearCompareTextView"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"

        />
    <EditText
        android:id="@+id/yearCompareEditText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:hint="Select.. "




        android:layout_marginTop="380dp"
        android:gravity="center"

        android:layout_marginLeft="200dp"
        android:textAppearance="?android:textAppearanceSmall"


        android:textSize="20dp"

        android:editable="false"

        />


</FrameLayout>
